.watch-listing {
  position: relative;
  background: #000;
  color: #FFD700;
  text-shadow: 0 0 6px rgba(255,215,0,0.8);
  padding: 1rem;
  border-radius: 8px;
  overflow: hidden;
  transition: transform .3s ease, box-shadow .3s ease;
  box-shadow: inset 0 0 0 2px #d4af37;
}
.watch-listing::before {
  content: "";
  position: absolute;
  top: -50%; left: -50%;
  width: 200%; height: 200%;
  background: conic-gradient(#d4af37,#ffd700,#d4af37);
  opacity: 0;
  transition: opacity .3s ease;
  border-radius: 50%;
  z-index: 0;
}
.watch-listing:hover {
  transform: scale(1.05);
  box-shadow: 0 0 20px #ffd700, inset 0 0 0 2px #ffd700;
}
.watch-listing:hover::before {
  opacity: .6;
  animation: rb 4s linear infinite;
}
@keyframes rb {
  to { transform: rotate(1turn); }
}